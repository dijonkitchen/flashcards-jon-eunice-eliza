<div class="container">
  <h2><%= current_user.username %></h2>

  <!-- Iterate over each kind of deck -->
  <% decks_played.each do |round_id, rounds_played| %>
    <h3><%= rounds_played[0].deck.name %></h3>
    <table>
      <tr>
        <th>Date</th>
        <th>Cards in Deck</th>
        <th>First Guesses Correct</th>
        <th>Total Guesses</th>
      </tr>

    <!-- Iterate over each round of a particular deck -->
    <% rounds_played.each do |this_round| %>
      <tr>
        <td class="table-format"><%= long_form_date(this_round.created_at) %></td>
        <td class="table-format"><%= this_round.deck.cards.count %></td>
        <td class="table-format"><%= this_round.first_guesses %></td>
        <td class="table-format"><%= this_round.total_guesses %></td>
      </tr>
    <% end %>

    </table>
  <% end %>
</div>
